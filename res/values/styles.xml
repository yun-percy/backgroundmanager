<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="Appicon_theme" parent="AppBaseTheme">
		<item name="android:layout_width">50dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_marginTop">12dp</item>
	</style>
	<style name="Text_theme" parent="AppBaseTheme">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">40dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>
	<style name="image_Theme" parent="AppBaseTheme">
		<item name="android:layout_width">110dip</item>
		<item name="android:layout_height">110dip</item>
		<item name="android:layout_marginTop">12dp</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:padding">15dp</item>
	</style>
</resources>
